<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UTSProject.Resources.Views.DetailPage"
             Shell.PresentationMode="Animated"
             Shell.NavBarHasShadow="True"
             Title="DetailPage">
    <VerticalStackLayout WidthRequest="500" Margin="10">
        <Label Text="Connection Details"
               Style="{StaticResource LabelHeader}"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <HorizontalStackLayout HorizontalOptions="Start">
                <Image Source="busicon.png"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       WidthRequest="50"/>
                <Label Text="{Binding ConnectionDetails.RouteShortName}"
                       Style="{StaticResource LabelStandard}"
                       Grid.Row="0"
                       Grid.Column="0"
                       />
            </HorizontalStackLayout>
            
        </Grid>
    </VerticalStackLayout>
</ContentPage>